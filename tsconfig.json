{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./out",
        "rootDir": "./",
        "moduleResolution": "node16",
        "paths": {
            "@utils/*": [
                "src/utils/*"
            ],
            "@groupCommands/*": [
                "src/commands/group/*"
            ],
            "@pmCommands/*": [
                "src/commands/pm/*"
            ],
            "@groupHandlers/*": [
                "src/handlers/group/*"
            ],
            "@pmHandlers/*": [
                "src/handlers/pm/*"
            ]
        },
        // Enable when need to debug in WebStorm/VSCode
        "sourceMap": false
    }
}
