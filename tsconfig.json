{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./out",
        "rootDir": "./",
        "baseUrl": "./src",
        "moduleResolution": "node16",
        "paths": {
            "@utils/*": [
                "utils/*"
            ],
            "@enums/*": [
                "enums/*"
            ],
            "@locale/*": [
                "locale/*"
            ],
            "@groupCommands/*": [
                "commands/group/*"
            ],
            "@pmCommands/*": [
                "commands/pm/*"
            ],
            "@groupHandlers/*": [
                "handlers/group/*"
            ],
            "@pmHandlers/*": [
                "handlers/pm/*"
            ]
        },
        // Enable when need to debug in WebStorm/VSCode
        "sourceMap": false
    }
}
