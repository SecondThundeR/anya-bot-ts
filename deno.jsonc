{
  "importMap": "import_map.json",
  "lint": {
    "files": {
      "include": ["src/", "./bot.ts", "./deps.ts"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["ban-ts-comment"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/", "./bot.ts", "./deps.ts"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "always"
    }
  }
}
